<div class="card {{if faceDown "face-down" ""}}"
  data-test-selector="card">
  {{#if faceUp}}
    <p class="card-title"
      data-test-selector="card-title">
      {{card.title}}
    </p>
    <img
      class="card-image"
      data-test-selector="card-image"
      src={{card.image}}
      alt={{card.name}} >
    <p class="card-description"
      data-test-selector="card-description">
      {{card.description}}
    </p>
  {{/if}}
</div>
